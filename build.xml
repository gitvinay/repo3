<project name="add"  default="jar">
<target name="makedir">
<mkdir dir="/build/class"/>
<mkdir dir="/build/jar"/>
</target>
<target name="compile" depends="makedir">
<javac srcdir="./src" destdir="/build/class"/>
</target>
<target name="jar" depends="compile">
<jar destfile="/build/jar" basedir="/build/class"/>
</target>
</project>

